[user]
	name = Yukinobu Nagayasu
	email = nagayasu@yukinobu.jp
[column]
	ui = auto
[gui]
	encoding = utf-8
[help]
	autocorrect = prompt
[core]
	fsmonitor = false
	autocrlf = input
	safecrlf = warn
	excludesfile = ~/.gitignore
	quotepath = false
	commentChar = ";"
[safe]
	directory = *
[credential]
	helper = /mnt/c/Program\\ Files/Git/mingw64/libexec/git-core/git-credential-wincred.exe
	helper = wincred

[init]
	defaultBranch = main
[log]
	date = iso
[commit]
	verbose = true
[pull]
	ff = only
	rebase = true
[push]
	default = simple
	autoSetupRemote = true
	followTags = true
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[merge]
	ff = false
	conflictstyle = zdiff3
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[rerere]
	enabled = true
	autoupdate = true
[reflog]
	date = iso-local
	format = %C(auto)%h %gd[%ar]: %gs (%s)

[alias]
	now = "!__f() { \\git commit --message \"now: auto commit on $(\\date '+%Y-%m-%d %H:%M [%Z]') by ${USER} at $(hostname)\"; }; __f"
	nowall = "!__f() { \\git commit --all --message \"now: auto commit on $(\\date '+%Y-%m-%d %H:%M [%Z]') by ${USER} at $(hostname)\"; }; __f"
